{
  "compilerOptions": {
    "baseUrl": ".", // This sets the base directory for relative paths
    "paths": {
      "@/*": ["./src/*"],
      "@/common/*": ["./src/app/common/*"],
      "@/components/*": ["./src/app/common/components/*"],
      "@/hooks/*": ["./src/app/common/hooks/*"],
      "@/utils/*": ["./src/app/common/utils/*"],
      "@/context/*": ["./src/context/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "baseUrl": ".", // This sets the base directory for relative paths
    "paths": {
      "@/*": ["./src/*"],
      "@/common/*": ["./src/app/common/*"],
      "@/components/*": ["./src/app/common/components/*"],
      "@/hooks/*": ["./src/app/common/hooks/*"],
      "@/utils/*": ["./src/app/common/utils/*"],
      "@/context/*": ["./src/context/*"]
    }
  },
  "include": ["src/**/*", "next-env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
